<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
      }

      body {
        background: #fff;
        color: #111827;
        font-size: 13px;
        line-height: 1.6;
      }

      .invoice-page {
        width: 100%;
        padding: 24px;
        position: relative; /* Watermark ke liye zaruri */
      }

      /* Background watermark */
      .bg-watermark {
        position: absolute;
        top: 20%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-15deg);
        font-size: 70px;
        color: rgba(0, 0, 0, 0.05);
        font-weight: 700;
        z-index: 500;
        pointer-events: none;
      }

      /* PAID watermark */
      .paid-watermark {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-15deg);
        font-size: 100px;
        color: rgba(0, 0, 0, 0.1);
        font-weight: 700;
        z-index: 1000;
        pointer-events: none;
      }

      .invoice-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 3px solid #1e3a8a;
        padding-bottom: 12px;
        margin-bottom: 20px;
        position: relative; /* z-index ke liye */
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .header-left img {
        height: 70px;
      }

      .company-name {
        font-size: 20px;
        font-weight: 700;
      }

      .header-right {
        font-size: 22px;
        font-weight: 700;
        color: #1e3a8a;
      }

      .invoice-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 18px;
        font-size: 13px;
      }

      .invoice-meta strong {
        font-weight: 700;
      }

      .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        margin-bottom: 20px;
      }

      .info-box {
        line-height: 1.6;
      }

      .info-title {
        font-weight: 700;
        margin-bottom: 6px;
        color: #1e3a8a;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }

      th {
        background: #1e3a8a;
        color: #fff;
        text-align: left;
        padding: 10px;
        font-size: 13px;
      }

      td {
        padding: 9px 10px;
        border-bottom: 1px solid #e5e7eb;
      }

      td:last-child {
        text-align: right;
      }

      .summary-wrapper {
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
      }

      .summary-box {
        width: 320px;
        border: 1px solid #e5e7eb;
        padding: 14px;
      }

      .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
      }

      .summary-row.total {
        font-weight: 700;
        font-size: 15px;
        border-top: 2px solid #1e3a8a;
        padding-top: 8px;
        margin-top: 8px;
      }

      .comments {
        margin-top: 18px;
        font-size: 12.5px;
      }

      .invoice-footer {
        margin-top: 30px;
        border-top: 1px solid #e5e7eb;
        padding-top: 10px;
        text-align: center;
        font-size: 12px;
        color: #374151;
      }

      @media print {
        body {
          margin: 0;
        }
      }
    </style>
  </head>

  <body>
    <div class="invoice-page">
      <!-- Background watermark -->
      <div class="bg-watermark">XYNAPSE SYSTEM</div>
      <!-- Paid watermark -->
      <div class="paid-watermark">PAID</div>

      <div class="invoice-header">
        <div class="header-left">
          <img src="<%= logoBase64 %>" alt="Logo" />
          <!-- <div class="company-name">XYNAPSE SYSTEM</div> -->
        </div>
        <div class="header-right">RECEIPT</div>
      </div>

      <div class="invoice-meta">
        <div><strong>INVOICE #</strong> <%= invoice.invoiceNumber %></div>
        <div><strong>DATE</strong> <%= invoice.date %></div>
      </div>

      <div class="info-grid">
        <div class="info-box">
          <div class="info-title">MAILING INFO</div>
          Ground Floor, Plot No: 128-P2,<br />
          Near Ginger Hotel, EPIP Zone,<br />
          Whitefield, Bengaluru<br />
          Phone: 7081140055<br />
          Mail: office@codexuslabs.com
        </div>
        <div class="info-box">
          <div class="info-title">STUDENT DETAILS</div>
          <strong><%= student.name %></strong><br />
          Bio: <%= student.bio %><br />
          Phone: <%= student.mobile %><br />
          Mode: <%= invoice.paymentMode %>
        </div>
      </div>

      <table>
        <thead>
          <tr>
            <th>COURSES</th>
            <th>INSTRUCTOR</th>
            <th>AMOUNT</th>
          </tr>
        </thead>
        <tbody>
          <% invoice.courses.forEach(c => { %>
          <tr>
            <td><%= c.courseId.title %></td>
            <td><%= c.instructorId.name %></td>
            <td>₹<%= parseFloat(c.amount.toString()) %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <% if(invoice.notes) { %>
      <div class="comments">
        <strong>OTHER COMMENTS / TAX RATE 18%</strong><br />
        <%= invoice.notes %>
      </div>
      <% } %>

      <div class="summary-wrapper">
        <div class="summary-box">
          <div class="summary-row">
            <span>SUBTOTAL</span>
            <span>₹<%= invoice.courses.reduce((sum, c) => sum + parseFloat(c.amount.toString()), 0) %></span>
          </div>
          <div class="summary-row"><span>CGST</span><span>₹<%= parseFloat(invoice.taxes.cgst.toString()) %></span></div>
          <div class="summary-row"><span>SGST</span><span>₹<%= parseFloat(invoice.taxes.sgst.toString()) %></span></div>
          <div class="summary-row"><span>IGST</span><span>₹<%= parseFloat(invoice.taxes.igst.toString()) %></span></div>
          <div class="summary-row"><span>Other Taxes</span><span>₹<%= parseFloat(invoice.taxes.otherTaxes.toString()) %></span></div>
          <div class="summary-row"><span>DISCOUNT</span><span>₹<%= parseFloat(invoice.discount.toString()) %></span></div>
          <div class="summary-row total"><span>TOTAL</span><span>₹<%= parseFloat(invoice.totalAmount.toString()) %></span></div>
        </div>
      </div>

      <div class="invoice-footer">
        XYNAPSE SYSTEM © <%= new Date().getFullYear() %>
      </div>
    </div>
  </body>
</html>
